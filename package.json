{
  "name": "pdfbuilder",
  "version": "0.2.0",
  "description": "Build pdf files from html and css.",
  "repository": "git@github.com:rykerrumsey/pdfbuilder.git",
  "author": "Ryker Rumsey <rykerrumsey@outlook.com>",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "devDependencies": {
    "electron": "^2.0.3",
    "electron-builder": "^20.15.1",
    "electron-webpack": "^2.1.2",
    "monaco-editor": "^0.13.1",
    "monaco-editor-webpack-plugin": "^1.3.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.3",
    "webpack": "^4.12.0"
  },
  "dependencies": {
    "electron-debug": "^2.0.0",
    "electron-store": "^2.0.0",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "handlebars": "^4.0.11",
    "puppeteer": "^1.5.0",
    "sass": "^1.7.1",
    "source-map-support": "^0.5.6"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "custom.webpack.additions.js"
    }
  },
  "build": {
    "asar": true,
    "asarUnpack": "node_modules/puppeteer/.local-chromium/**/*"
  }
}
